---
interface Props {
  src: string;
  alt: string;
  width?: number;
  height?: number;
  class?: string;
  loading?: 'lazy' | 'eager';
}

const { 
  src, 
  alt, 
  width, 
  height, 
  class: className = '',
  loading = 'lazy'
} = Astro.props;

// VÃ©rifier si l'image est externe
const isExternal = src.startsWith('http');
const imageUrl = isExternal ? src : new URL(src, Astro.url).pathname;
---

<img
  src={imageUrl}
  alt={alt}
  width={width}
  height={height}
  loading={loading}
  decoding="async"
  class={className}
  onerror="this.onerror=null; this.src='/images/placeholder.jpg';"
/> 