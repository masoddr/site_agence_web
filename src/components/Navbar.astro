  .navbar-link {
    color: white;
    transition: color 0.3s;
  }
  .navbar-scrolled .navbar-link {
    color: black;
  }
  #navbar-mobile-menu {
    opacity: 0;
    pointer-events: none;
    transform: translateY(2rem);
  }
  #navbar-mobile-menu.opacity-100 {
    opacity: 1;
    pointer-events: auto;
    transform: translateY(0);
  }
