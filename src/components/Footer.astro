---

<footer class="bg-gray-900 text-gray-300 py-8">
  <div class="container mx-auto px-4">
    <div class="grid grid-cols-2 md:grid-cols-3 gap-8 mb-8">
      <!-- Prestations -->
      <div>
        <h4 class="text-sm font-semibold text-white mb-3">Prestations</h4>
        <ul class="space-y-2 text-sm">
          {footerLinks.prestations.map(link => (
            <li>
              <a 
                href={link.href}
                class="text-gray-400 hover:text-white transition-colors"
              >
                {link.text}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Pages -->
      <div>
        <h4 class="text-sm font-semibold text-white mb-3">Pages</h4>
        <ul class="space-y-2 text-sm">
          {footerLinks.pages.map(link => (
            <li>
              <a 
                href={link.href}
                class="text-gray-400 hover:text-white transition-colors"
              >
                {link.text}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Contact -->
      <div class="col-span-2 md:col-span-1">
        <h4 class="text-sm font-semibold text-white mb-3">Contact</h4>
        <div class="flex space-x-4 mb-3">
          {socialLinks.map(social => (
            <a 
              href={social.href}
              class="text-gray-400 hover:text-white transition-colors"
              target="_blank"
              rel="noopener noreferrer"
              aria-label={social.name}
            >
              <Fragment set:html={social.icon} />
            </a>
          ))}
        </div>
        <a 
          href="/contact" 
          class="inline-block text-sm text-gray-400 hover:text-white transition-colors"
        >
          contact@massylouaddour.com
        </a>
      </div>
    </div>

    <!-- Bottom Bar -->
    <div class="border-t border-gray-800 pt-6">
      <div class="flex flex-col md:flex-row justify-between items-center text-sm">
        <p class="text-gray-400">
          © {currentYear} Massyl Ouaddour
        </p>
        <a 
          href="/mentions-legales"
          class="text-gray-400 hover:text-white transition-colors mt-2 md:mt-0"
        >
          Mentions légales
        </a>
      </div>
    </div>
  </div>
</footer>

<script>
  // Newsletter form handling
  const form = document.querySelector('form');
  form?.addEventListener('submit', (e) => {
    e.preventDefault();
    const email = form.querySelector('input[type="email"]')?.value;
    // Here you would typically send this to your backend
    console.log('Newsletter subscription:', email);
    alert('Merci pour votre inscription !');
    form.reset();
  });
</script> 