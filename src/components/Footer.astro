---

<footer class="bg-gray-900 text-gray-300">
  <div class="container mx-auto px-4 py-12">
    <!-- Main Footer Content -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
      <!-- Company Info -->
      <div class="space-y-4">
        <h3 class="text-2xl font-bold text-white">Massyl</h3>
        <p class="text-sm">
          Création de sites web performants et accessibles pour les professionnels.
        </p>
        <!-- Social Links -->
        <div class="flex space-x-4">
          {socialLinks.map(social => (
            <a 
              href={social.href}
              class="text-gray-400 hover:text-white transition-colors"
              target="_blank"
              rel="noopener noreferrer"
              aria-label={social.name}
            >
              <Fragment set:html={social.icon} />
            </a>
          ))}
        </div>
      </div>

      <!-- Prestations -->
      <div>
        <h4 class="text-lg font-semibold text-white mb-4">Prestations</h4>
        <ul class="space-y-2">
          {footerLinks.prestations.map(link => (
            <li>
              <a 
                href={link.href}
                class="text-gray-400 hover:text-white transition-colors"
              >
                {link.text}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Pages -->
      <div>
        <h4 class="text-lg font-semibold text-white mb-4">Pages</h4>
        <ul class="space-y-2">
          {footerLinks.pages.map(link => (
            <li>
              <a 
                href={link.href}
                class="text-gray-400 hover:text-white transition-colors"
              >
                {link.text}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Contact -->
      <div>
        <h4 class="text-lg font-semibold text-white mb-4">Contact</h4>
        <p class="text-sm mb-4">
          Besoin d'un site web ? Parlons-en !
        </p>
        <a 
          href="/contact" 
          class="inline-block px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-colors"
        >
          Me contacter
        </a>
      </div>
    </div>

    <!-- Bottom Bar -->
    <div class="border-t border-gray-800 mt-12 pt-8">
      <div class="flex flex-col md:flex-row justify-between items-center">
        <p class="text-sm">
          © {currentYear} Massyl Ouaddour. Tous droits réservés.
        </p>
        <div class="flex space-x-6 mt-4 md:mt-0">
          {footerLinks.legal.map(link => (
            <a 
              href={link.href}
              class="text-sm text-gray-400 hover:text-white transition-colors"
            >
              {link.text}
            </a>
          ))}
        </div>
      </div>
    </div>
  </div>
</footer>

