---
const currentYear = new Date().getFullYear();

const footerLinks = {
  prestations: [
    { text: 'Landing Page', href: '/prestations-details#landing-page' },
    { text: 'Site Vitrine', href: '/prestations-details#site-vitrine' },
    { text: 'Site Multi-pages', href: '/prestations-details#site-multi-pages' },
    { text: 'Site sur-mesure', href: '/prestations-details#site-sur-mesure' },
    { text: 'Refonte', href: '/prestations-details#refonte-site' },
    { text: 'Maintenance', href: '/prestations-details#maintenance' }
  ],
  pages: [
    { text: 'Accueil', href: '/' },
    { text: 'Prestations', href: '/prestations' },
    { text: 'Portfolio', href: '/portfolio' },
    { text: 'À propos', href: '/a-propos' },
    { text: 'Contact', href: '/contact' }
  ],
  legal: [
    { text: 'Mentions légales', href: '/mentions-legales' }
  ]
};

const socialLinks = [
  { 
    name: 'LinkedIn',
    href: 'https://linkedin.com/in/massylouaddour',
    icon: `<svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
