---
const realisations = [
  {
    image: "/images/realisations/basta-pizzeria.jpg",
    titre: "BASTA PIZZERIA",
    ville: "Toulouse",
    client: "Pizzeria artisanale",
    description: "Site vitrine, réservation en ligne, SEO local",
    url: "https://site-basta-pizzeria.vercel.app",
  },
  {
    image: "/images/realisations/orus-space.jpg",
    titre: "ORUS SPACE",
    ville: "Albi",
    client: "Espace de coworking",
    description: "Réservation en ligne, espace membres, blog",
    url: "https://orus-space.vercel.app",
  },
  {
    image: "/images/realisations/studio-yoga.jpg",
    titre: "STUDIO YOGA",
    ville: "Montauban",
    client: "Studio de yoga",
    description: "Planning en ligne, galerie photos, témoignages",
    url: "https://studio-yoga.vercel.app",
  }
];
---

<section class="py-20 bg-white">
  <div class="container mx-auto px-4">
    <h2 class="text-4xl md:text-5xl font-extrabold uppercase text-center mb-2 tracking-tight">Mes réalisations</h2>
    <p class="text-lg text-gray-700 text-center mb-12">Des sites performants et élégants pour tous types de clients</p>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {realisations.map((r) => (
        <div class="bg-white rounded-2xl overflow-hidden flex flex-col">
          <a href={r.url} target="_blank" rel="noopener" class="relative group block">
            <img src={r.image} alt={r.titre} class="w-full h-56 object-cover group-hover:scale-105 transition-transform duration-300" />
          </a>
          <div class="p-6 flex-1 flex flex-col justify-between">
            <div class="text-2xl font-extrabold uppercase mb-2 tracking-wide text-gray-900">{r.titre}</div>
            <div class="mb-2 flex items-center gap-2">
              <span class="text-sm text-gray-500">{r.ville}</span>
              <span class="text-xs text-gray-400">•</span>
              <span class="text-sm text-gray-500">{r.client}</span>
            </div>
            <div class="text-gray-700 text-base mb-4">{r.description}</div>
          </div>
        </div>
      ))}
    </div>
    <div class="flex justify-center mt-12">
      <a
        href="/portfolio"
        class="bg-transparent border-2 border-black text-black px-8 py-3 rounded-lg font-semibold hover:bg-black hover:text-white transition-colors"
      >
        Voir toutes mes réalisations
      </a>
    </div>
  </div>
</section> 